<div class="mt-3">
    <h2 class="text-center my-3">你想對誰說幹話</h2>

    <form action="/" method="post">
        <div class="container">
            <div class="row">
                {{#each profession}}
                    <div class="col-md-4">
                        <label for="{{ this.name }}">
                            <div class="card">
                                <img height="200" src="{{ this.imgUrl }}" class="card-img-top" alt="{{ this.title }}">
                                <div class="card-body">
                                    <div class="form-group text-center">
                                        <input 
                                            type="radio"
                                            id="{{ this.name }}"
                                            name="profession"
                                            value="{{ this.name }}"
                                            {{!-- 原來要用 ../ 才能取到 each 外部的值喔... 長知識了 --}}
                                            {{#isEqual ../options.profession this.name }}checked{{/isEqual}}
                                        >
                                        <span>{{ this.title }}</span>
                                    </div>
                                </div>
                            </div>
                        </label>
                    </div>
                {{/each}}
            </div>
            <div class="row mt-5">
                <div class="col-md-2">
                    <button class="btn btn-outline-primary" type="submit">產生幹話</button>
                </div>
                <div class="col-md-10">
                    <p style="height: 120px;" class="border py-2 py-3">{{ trashTalk }}</p>
                </div>
            </div>
        </div>
    </form>
</div>