<div class="mt-3">
    <h3 class="text-center">你想對誰說幹話</h3>

    <form action="/" method="post">
        <div class="container">
            <div class="row">
                {{#each profession}}
                    <div class="col-md-4">
                        <label for="{{ this.name }}">
                            <div class="card">
                                <img height="200" src="{{ this.imgUrl }}" class="card-img-top" alt="{{ this.title }}">
                                <div class="card-body">
                                    <div class="form-group text-center">
                                        <input type="radio" id="{{ this.name }}" name="profession" value="{{ this.name }}">
                                        <span>{{ this.title }}</span>
                                    </div>
                                </div>
                            </div>
                        </label>
                    </div>
                {{/each}}
            </div>
            <div class="row mt-3">
                <div class="col-md-2">
                    <button class="btn btn-outline-primary" type="submit">產生幹話</button>
                </div>
                <div class="col-md-10">
                    <p style="height: 120px;" class="border py-2 py-3">TrashTalk</p>
                </div>
            </div>
        </div>
    </form>
</div>